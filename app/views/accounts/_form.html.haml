.formСумма
  = form_for @account, html: { multipart: true } do |f|
    - if @account.errors.any?
      = @account.errors.count
      - @account.errors.full_messages.each do |msg|
        %li= msg

    .form-group.row
      = f.label :title, class: 'col-sm-2 col-form-label'
      .col-sm-10
        = f.text_field :title, class: 'form-control'

    .form-group.row
      = f.label :icon, class: 'col-sm-2 col-form-label'
      .col-sm-10
        = f.text_field :icon, class: 'form-control'

    .form-group.row
      = f.label :color, class: 'col-sm-2 col-form-label'
      .col-sm-10
        = f.text_field :color, class: 'form-control'

    .form-group.row
      = f.label :balance, class: 'col-sm-2 col-form-label'
      .col-sm-10
        = f.text_field :balance, class: 'form-control'

    = f.submit 'сохранить', class: 'btn btn-success'
