.form
  = form_for @costs_operation do |f|
    - if @costs_operation.errors.any?
      = @costs_operation.errors.count
      - @costs_operation.errors.full_messages.each do |msg|
        %li= msg

    .form-group.row
      = f.label 'Счет', class: 'col-sm-2 col-form-label'
      .col-sm-10
        = f.select :account_id, options_from_collection_for_select(Account.all, :id, :title, @costs_operation.account_id ), {}, class: 'form-control'

    .form-group.row
      = f.label 'Категория', class: 'col-sm-2 col-form-label'
      .col-sm-10
        = f.select :costs_category_id, options_from_collection_for_select(CostsCategory.all, :id, :title, @costs_operation.costs_category_id || params[:category]), {}, class: 'form-control'

    .form-group.row
      = f.label 'Сумма', class: 'col-sm-2 col-form-label'
      .col-sm-10
        = f.number_field :value, class: 'form-control'
 
    .form-group.row
      = f.label :datetime, class: 'col-sm-2 col-form-label'
      .col-sm-10
        = f.date_field :datetime, class: 'form-control'

    = f.submit 'сохранить', class: 'btn btn-success'
